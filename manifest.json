{
    "manifest_version": 3,
    "name": "Pesticide for Chrome",
    "description": "Displays a visible grid on a webpage for easy development of websites.",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            },
            "description": "Toggle Pesticide"
        }
    }
}
